<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollHorizontally="true"
        android:text="FACTORIAL"
        android:id="@+id/label_titulo"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Digite el Numero"
        android:id="@+id/label_instrucciones"/>

    <EditText
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextFactorial"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:background="@color/cardview_light_background" />

    <Button
        android:text="Calcular"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/btnCalcularFactorial"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/editTextFactorial"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextFactorialResult"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        tools:background="@color/cardview_light_background" />


</LinearLayout>